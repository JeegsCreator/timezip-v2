---
import Github from "./icons/Github.astro";
import XIcon from "./icons/XIcon.astro";
---

<header class="flex w-full flex-col items-center gap-1">
  <div class="flex gap-5 text-xl">
    <a
      href="https://twitter.com/jeegscreator"
      aria-label="twitter"
      target="_blank"
    >
      <XIcon />
    </a>
    <a
      href="https://github.com/JhonnGutierrez/timezone-v2"
      aria-label="github"
      target="_blank"
    >
      <Github />
    </a>
  </div>
  <div class="flex flex-col items-center">
    <h1 class="font-montserrat text-5xl font-bold">TimeZip</h1>
    <p class="text-zinc-500">By Jeegs</p>
  </div>
